.app-wrapper

    > .blog
        color: #333
        font-size: 1.85rem
        margin: 0 auto
        width: 575px

        .post
            line-height: 1.6
            margin-bottom: 30px

            h1, h2
                color: #304251
                font-size: 2.5rem
                line-height: initial
                margin: 30px 0

                a
                    color: #386388

            p, pre
                margin-bottom: 20px

    .app-blog
        h1
            offscreen()
        .pagination
            display: flex
            flex-direction: row
            .btn
                border-color: #D1D1D1
                box-shadow: none
                flex-grow: 1
                padding-top: 15px
                padding-bottom: 15px
                
                &:hover
                    background-color: #3a3a3a
                    color: #efefef

                &+.btn
                    border-left-width: 0

    .app-blog-post
        .post-date
            color: #868686
            font-size: 1.3rem
            display: block
            margin-bottom: 30px
            text-align: center
        .post
            h1
                font-size: 3.5rem
                margin-bottom: 5px
                text-align: center

/* Media queries for portfolio */
@media (max-width: 600px)
    .app-wrapper
        > .blog
            width: 95%
