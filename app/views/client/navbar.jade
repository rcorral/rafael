script(id='navbar-template', type='text/x-handlebars-template')
    nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
        .container-fluid
            .navbar-header
                button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1')
                    span.sr-only Toggle navigation
                    span.icon-bar
                    span.icon-bar
                    span.icon-bar
                a.navbar-brand(href='/', data-behavior='route') Rafael Corral
            .collapse.navbar-collapse(id='bs-example-navbar-collapse-1')
                ul.nav.navbar-nav.navbar-right
                    li(class='{{#if homeActive}}active{{/if}}')
                        a(href='/', data-behavior='route') Home
                    li(class='{{#if portfolioActive}}active{{/if}}')
                        a(href='/portfolio', data-behavior='route') Portfolio
                    li(class='{{#if aboutActive}}active{{/if}}')
                        a(href='/about', data-behavior='route') About
