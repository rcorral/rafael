.app-portfolio

    h2
        color: rgba(40, 40, 40, 0.9)
        margin-bottom: 35px
        text-align: center

    .portfolio-wrapper
        padding: 0 20px
        display: flex
        justify-content: center
        flex-direction: row
        flex-wrap: wrap

        .arrow-up
            color: #C4C4C4
            font-size: 50px
            position: absolute
            bottom: -18px
            left: 109px

        .outer
            float: left
            position: relative
            width: 290px

        .inner
            margin: 0 auto
            width: 235px

        .content
            max-width: 250px
            margin: 0 auto

        .portfolio-item
            h3, p
                max-width: 250px
                padding: 0 5px
            p
                font-size: 18px

        .portfolio-item img
            max-width: 240px
            height: 170px

        .item-full
            width: 100%
            clear: both
            background-color: rgba(241, 241, 241, 1)
            border: 1px solid #D5D5D5
            font-size: 15px
            font-weight: 200
            line-height: 22px
            margin-bottom: 20px
            padding: 0 0 10px 0
            position: relative

            .close
                font-size: 23px
                outline: none
                position: absolute
                right: 7px
                top: 4px
                z-index: 999

            .images
                overflow: hidden
                position: relative
                margin: 0 auto

                .btnl,
                .btnr
                    background-color: #e6e6e6
                    background-image: none
                    border-radius: 0px
                    cursor: pointer
                    font-size: 13px
                    line-height: 18px
                    opacity 0.75
                    outline: none
                    padding-bottom: 4px
                    padding-top: 4px
                    position: absolute
                    top: 0
                    z-index: 99

                .btnl
                    right: 50%

                .btnr
                    border-left: 1px solid #BBB
                    left: 50%

                .btn-mobile
                    top: 42%

                    &.btnl
                        left: 0
                        right: auto

                    &.btnr
                        right: 0
                        left: auto

                .inner-wrap
                    width: 100000px
                    position: relative
                    left: 0
                    margin-top: 28px

                    img
                        float: left
                        padding: 0

                    .no-polaroid
                        background-color: transparent
                        border: none
                        box-shadow: none

            .item-more
                article
                    clear: both
                    margin: 30px 35px 20px

                p
                    margin: 12px auto

/* Media queries for portfolio */
@media (max-width: 596px)
    .portfolio-wrapper .outer
        width: 100%
        margin: 0 auto

@media (min-width: 597px)
    .portfolio-wrapper .outer
        width: 50%
        margin: 0 auto

@media (max-width: 720px)
    .app-portfolio
        h2
            font-size: 18px
            margin-left: auto
            margin-right: auto

@media (max-width: 664px)
    .app-portfolio
        h2
            text-align: left
            width: 235px

@media (min-width: 871px)
    .portfolio-wrapper .outer
        width: 33%
        margin: 0 auto

@media (max-width: 616px)
    .portfolio-wrapper
        margin-top: 25px

@media (max-width: 480px)
    .portfolio-wrapper .outer
        height: auto !important

@media (max-width: 768px)
    .portfolio-wrapper .item-full .item-more article
        margin: 20px 10px 0

@media (min-width: 769px)
    .portfolio-item
        cursor: pointer
        opacity 0.90
